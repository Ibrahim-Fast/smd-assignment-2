<?xml version="1.0" encoding="utf-8"?>

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical|center_horizontal"
    tools:context=".MainActivity"

    >

    <TableRow

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="SMD ASSIGNMENT 2: 19k1311"
            android:textSize="12dp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right"
        android:padding="10dp">

        <TextView
            android:id="@+id/v2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="right"
            android:padding="10dp"
            android:text="0"
            android:textSize="20dp"
            android:visibility="invisible" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <TextView
            android:id="@+id/operation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:padding="10dp"
            android:text="n"
            android:textSize="20dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/v1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="right"
            android:padding="10dp"
            android:text="0"
            android:textSize="20dp" />
    </TableRow>

    <TableRow android:padding="3dp">

        <Button
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:onClick="button_operation"
            android:tag="x"
            android:text="x"
            android:textSize="20dp" />

        <Button
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:onClick="button_number"
            android:tag="9"
            android:text="9"
            android:textSize="20dp" />

        <Button
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:onClick="button_number"
            android:tag="8"
            android:text="8"
            android:textSize="20dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_margin="5dp"
            android:layout_weight="1"
            android:onClick="button_number"
            android:tag="7"
            android:text="7"
            android:textSize="20dp" />
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp">

        <Button
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:onClick="button_operation"
            android:tag="/"
            android:text="/"
            android:textSize="20dp" />

        <Button
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:onClick="button_number"
            android:tag="6"
            android:text="6"
            android:textSize="20dp" />

        <Button
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:onClick="button_number"
            android:tag="5"
            android:text="5"
            android:textSize="20dp" />

        <Button
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:onClick="button_number"
            android:tag="4"
            android:text="4"
            android:textSize="20dp" />
    </TableRow>

    <TableRow

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp">

        <Button
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:onClick="button_operation"
            android:tag="+"
            android:text="+"
            android:textSize="20dp" />

        <Button
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:onClick="button_number"
            android:tag="3"
            android:text="3"
            android:textSize="20dp" />

        <Button
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:onClick="button_number"
            android:tag="2"
            android:text="2"
            android:textSize="20dp" />

        <Button
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:onClick="button_number"
            android:tag="1"
            android:text="1"
            android:textSize="20dp" />
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp">

        <Button
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:onClick="button_operation"
            android:tag="-"
            android:text="-"
            android:textSize="20dp" />

        <Button
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:onClick="button_number"
            android:tag="."
            android:text="."
            android:textSize="20dp" />

        <Button
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:onClick="button_number"
            android:tag="0"
            android:text="0"
            android:textSize="20dp" />

        <Button
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:onClick="button_operation"
            android:tag="ac"
            android:text="AC"
            android:textSize="20dp" />
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp">

        <Button
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:onClick="button_operation"
            android:tag="="
            android:text="="
            android:textSize="20dp" />
    </TableRow>
</TableLayout>
